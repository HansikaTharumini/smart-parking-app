<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_back"
    tools:context="com.example.myapplication.paymentform">

    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="416dp"
                android:layout_height="532dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="-32dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="68dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titlebooking"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="65dp"
                    android:layout_marginVertical="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=" Payment "
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/bookingidtxt"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="136dp"
                    android:layout_height="35dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Booking Id"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bookingid"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:background="@drawable/textboxnew"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#fff"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/amounttxt"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="136dp"
                    android:layout_height="35dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Amount"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:background="@drawable/textboxnew"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#fff"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/cardnumtxt"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="136dp"
                    android:layout_height="35dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Card Number"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/cardnum"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:background="@drawable/textboxnew"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#fff"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/expiretxt"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="136dp"
                    android:layout_height="35dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Expiration Date"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/expire"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:background="@drawable/textboxnew"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#fff"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/cvvtxt"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="136dp"
                    android:layout_height="35dp"
                    android:fontFamily="sans-serif-light"
                    android:text="CVV code"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/cvv"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:background="@drawable/textboxnew"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#fff"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/paybtn"
                    android:layout_width="229dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="34dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/but_log"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="70dp"
                    android:paddingRight="70dp"
                    android:text="Submit Payment"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="15sp" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
